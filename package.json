{
  "name": "hobnob",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && babel src -d dist --copy-files",
    "debug": "node --inspect=1337 --inspect-brk --nolazy node_modules/cucumber/bin/cucumber-js spec/cucumber/features/profile/replace --require-module @babel/register --require spec/cucumber/steps",
    "dev:serve": "yarn run build && cp spec/openapi/hobnob.yaml dist/openapi.yaml && dotenv -e envs/.env node dist/index.js",
    "dev:test": "yarn run test:e2e:prepare && yarn run test:unit && yarn run test:integration && yarn run test:e2e",
    "dev:test:e2e": "yarn run test:e2e:prepare && yarn run test:e2e",
    "dev:watch": "nodemon -w src --exec yarn run serve",
    "docs:format": "dotenv -e envs/.env ./scripts/swagger-ui/format.sh",
    "docs:serve": "dotenv -e envs/.env ./scripts/swagger-ui/serve.sh",
    "docs:update": "git submodule foreach --recursive git reset --hard && git submodule update --init --recursive && yarn run docs:format",
    "fix": "eslint src --fix",
    "lint": "eslint src",
    "precommit": "yarn run lint",
    "serve": "yarn run build && cp spec/openapi/hobnob.yaml dist/openapi.yaml && dotenv -e envs/.env pm2 start dist/index.js",
    "test": "yarn run test:unit && yarn run test:integration && yarn run test:e2e",
    "test:serve": "dotenv -e envs/test.env -e envs/.env babel-node src/index.js",
    "*test:coverage": "nyc --reporter=html --reporter=text yarn run dev:test",
    "test:unit": "mocha 'src/**/*.unit.test.js' --require @babel/register --timeout 4000",
    "test:unit:coverage": "nyc --reporter=html --reporter=text npm run test:unit",
    "test:integration": "dotenv -e envs/test.env -e envs/.env mocha -- 'src/**/*.integration.test.js' --require @babel/register --timeout 4000",
    "test:integration:coverage": "nyc --reporter=html --reporter=text npm run test:integration",
    "test:e2e": "dotenv -e envs/test.env -e envs/.env sh ./scripts/e2e.test.sh",
    "test:e2e:prepare": "dotenv -e envs/test.env -e envs/.env ./scripts/e2e.prepare.sh",
    "test:e2e:coverage": "nyc --reporter=html --reporter=text yarn run test:e2e"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/msm1089/hobnob.git"
  },
  "author": "Mark McPherson",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "chance": "^1.0.18",
    "cucumber": "^5.1.0",
    "dotenv-cli": "^2.0.0",
    "dotenv-export": "^2.0.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jsonfile": "^5.0.0",
    "live-server": "^1.2.1",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isequal": "^4.5.0",
    "mocha": "^6.1.4",
    "node-cmd": "^3.0.0",
    "nodemon": "^1.18.10",
    "nyc": "^14.1.1",
    "object-path": "^0.11.6",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.6",
    "superagent": "^4.1.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.0",
    "ajv": "^6.10.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "elasticsearch": "^15.4.1",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "pm2": "^3.5.0",
    "random-seed": "^0.3.0",
    "special-escape": "^0.1.0"
  },
  "resolutions": {
    "axios": "^0.19.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint"
    }
  }
}

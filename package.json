{
  "name": "hobnob",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && babel src -d dist --source-maps --copy-files",
    "watch": "nodemon -w src --exec yarn run serve",
    "watch-test": "npx dotenv -e envs/test.env yarn run watch",
    "es-start": "./batchfiles/es-start.bat",
    "es-stop": "./batchfiles/es-stop.bat",
    "es-init": "./batchfiles/es-init.bat",
    "killserver": "./batchfiles/killserver.bat",
    "es-checkisup": "curl \"http://localhost:9200/?pretty\"",
    "fix": "eslint src --fix",
    "lint": "eslint src",
    "precommit": "yarn run lint",
    "test:e2e": "dotenv -e envs/test.env -e envs/.env ./scripts/e2e.test.sh",
    "test:e2e:travis": "yarn build && dotenv -e envs/test.env -e envs/.env pm2 start dist/index.js && dotenv -e envs/test.env -e envs/.env cucumber-js spec/cucumber/features --require-module @babel/register --require spec/cucumber/steps",
    "test:e2e:coverage": "nyc --reporter=html --reporter=text yarn run test:e2e",
    "test:unit": "mocha \"src/**/*.unit.test.js\" --require @babel/register",
    "test:unit:coverage": "nyc --reporter=html --reporter=text npm run test:unit",
    "test:integration": "dotenv -e envs/test.env -e envs/.env mocha -- \"src/**/*.integration.test.js\" --require @babel/register",
    "test:integration:coverage": "nyc --reporter=html --reporter=text npm run test:integration",
    "test": "yarn run test:e2e:travis && yarn run test:unit && yarn run test:integration",
    "test:coverage": "nyc --reporter=html --reporter=text yarn run test",
    "test:serve": "dotenv -e envs/test.env -e envs/.env babel-node src/index.js",
    "serve": "yarn run build && dotenv -e envs/.env pm2 start dist/index.js",
    "debug": "dotenv -e envs/test.env -e envs/.env node --inspect-brk dist/index.js",
    "compile": "babel src --out-dir dist --source-maps --watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/msm1089/hobnob.git"
  },
  "author": "Mark McPherson",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "chance": "^1.0.18",
    "cucumber": "^5.1.0",
    "dotenv-cli": "^2.0.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jsonfile": "^5.0.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isequal": "^4.5.0",
    "mocha": "^6.1.4",
    "node-cmd": "^3.0.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "object-path": "^0.11.4",
    "pm2": "^3.5.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.6",
    "superagent": "^4.1.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.0",
    "ajv": "^6.10.0",
    "body-parser": "^1.18.3",
    "elasticsearch": "^15.4.1",
    "express": "^4.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint"
    }
  }
}
